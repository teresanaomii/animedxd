<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/rounded_review_bg">

    <ImageView
        android:id="@+id/btnCloseReviewDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Close review dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/btnCloseReviewDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etReviewInput"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_review_fill"
        android:hint="Input Your Review"
        android:gravity="top"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/reviewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Space
        android:id="@+id/reviewWarningSpacer"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/etReviewInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvReviewWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*Review field cannot be empty"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/reviewWarningSpacer"
        app:layout_constraintBottom_toBottomOf="@id/reviewWarningSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/reviewWarningSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvReviewSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your review!"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/btnSendReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>